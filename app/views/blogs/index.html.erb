<div id="page-blogs-btn" class="page-blogs-btn">
    <p><a class="move-page-blogs" id="move-page-blogs">▲</a></p>
</div>

<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <center>
    <h1>ブログ一覧</h1>
      <%= link_to "ブログを作成する", new_blog_path, class: 'btn btn-default' %>
    </center>
    <% @blogs.each do |blog| %>
    <div class="row">
      <div class="field">
        <%= profile_img(@user.find(blog.user_id))  %>
        <% temp = @user.find(blog.user_id) %>
        <%= "　" + temp.name + "の投稿" %>
      </div>

      <%= link_to blog_path(blog) do %>
        <h4><strong><%= blog.title %></strong></h4>
      <% end %>
      <p><%= blog.content %></p>
      <% if current_user.id == blog.user_id %>
        <%= link_to "編集する", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
        <%= link_to "削除する", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
