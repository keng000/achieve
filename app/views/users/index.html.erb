<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(user) %>
        <%= user.email %><br>
        <% if user.id != current_user.id %>
          <ul>
            <div class="item">
              <li><%= link_to user.name, user %></li>
              <li><%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></li>
            </div>
            <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
          </ul>
        <% end %>
      </div>
  <% end %>
</div>
