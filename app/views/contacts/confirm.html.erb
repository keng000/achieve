<div class="container">
  <div class="cont-wrap col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
<h3>以下の内容で、送信する。</h3>

<%= form_for(@contacts) do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>

  <p>タイトル:<%= @contacts.name %></p>
  <p>本文:<%= @contacts.email %></p>
  <p>本文:<%= @contacts.content %></p>
  <%= f.submit "登録する", class: 'btn btn-default'  %>
<% end %>

<%= form_for(@contacts, url: new_contact_path, method: 'get') do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :content %>
  <%= f.submit "もどる" , name: 'back', class: 'btn btn-default' %>
<% end %>
</div>
</div>
